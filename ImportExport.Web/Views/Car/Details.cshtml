@model ImportExport.Model.Car

@{
    ViewData["Title"] = "Car Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Make
        </dt>
        <dd class="col-sm-10">
            @Model.Make
        </dd>
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            Year
        </dt>
        <dd class="col-sm-10">
            @Model.Year
        </dd>
        <dt class="col-sm-2">
            Power
        </dt>
        <dd class="col-sm-10">
            @Model.Power HP
        </dd>
        <dt class="col-sm-2">
            Mileage
        </dt>
        <dd class="col-sm-10">
            @Model.Mileage km
        </dd>
        <dt class="col-sm-2">
            Fuel Consumption
        </dt>
        <dd class="col-sm-10">
            @Model.FuelConsumption L/100km
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            €@Model.Price
        </dd>
        <dt class="col-sm-2">
            Previous Owners
        </dt>
        <dd class="col-sm-10">
            @Model.PreviousOwners
        </dd>
        <dt class="col-sm-2">
            Fuel
        </dt>
        <dd class="col-sm-10">
            @Model.Fuel
        </dd>
        <dt class="col-sm-2">
            Transmission
        </dt>
        <dd class="col-sm-10">
            @Model.Transmission
        </dd>
        <dt class="col-sm-2">
            Dealer
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Dealer" asp-action="Details" asp-route-id="@Model.DealerID">@Model.Dealer?.Name</a>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
