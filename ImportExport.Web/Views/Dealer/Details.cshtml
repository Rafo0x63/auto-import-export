@model ImportExport.Model.Dealer

@{
    ViewData["Title"] = "Dealer Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Dealer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Phone Number
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location.Address, @Model.Location.City
        </dd>
        <dt class="col-sm-2 mt-5">
            <h4>Cars</h4>
        </dt>
        <dd class="col-sm-10 mt-5">
            <ul class="col-sm-6">
                @foreach (var car in Model.Cars)
                {
                    <li class ="list-group-item d-flex justify-content-between align-items-center">
                        <a asp-controller="Car" asp-action="Details" asp-route-id="@car.ID">@car.Make @car.Model (@car.Year)</a>
                        <form asp-controller="Order" asp-action="Create" asp-route-id="@car.ID" method="post">
                            <input type="hidden" name="carId" value="@car.ID" />
                            <button type="submit" class="btn btn-primary">Create Order</button>
                        </form>
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
